{
  "name": "@classytic/mongokit",
  "version": "2.0.0",
  "description": "Production-grade MongoDB repositories with zero dependencies - smart pagination, events, and plugins",
  "type": "module",
  "main": "./src/index.js",
  "types": "./types/index.d.ts",
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "import": "./src/index.js"
    },
    "./pagination": {
      "types": "./types/pagination/PaginationEngine.d.ts",
      "import": "./src/pagination/PaginationEngine.js"
    },
    "./plugins": {
      "types": "./types/plugins/index.d.ts",
      "import": "./src/plugins/index.js"
    },
    "./utils": {
      "types": "./types/utils/index.d.ts",
      "import": "./src/utils/index.js"
    }
  },
  "files": [
    "src",
    "types",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "mongodb",
    "mongoose",
    "repository",
    "repository-pattern",
    "data-access",
    "pagination",
    "cursor-pagination",
    "infinite-scroll",
    "offset-pagination",
    "keyset-pagination",
    "multi-tenant",
    "multi-tenancy",
    "event-driven",
    "plugin-based",
    "zero-dependencies",
    "express",
    "fastify",
    "nestjs",
    "nextjs",
    "typescript"
  ],
  "author": "Sadman Chowdhury (Github: @siam923)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/classytic/mongokit.git"
  },
  "bugs": {
    "url": "https://github.com/classytic/mongokit/issues"
  },
  "homepage": "https://github.com/classytic/mongokit#readme",
  "peerDependencies": {
    "mongoose": "^8.0.0 || ^9.0.0"
  },
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsc",
    "test": "node --test test/*.test.js",
    "test:watch": "node --test --watch test/*.test.js",
    "prepublishOnly": "npm run build",
    "publish:npm": "npm publish --access public"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "mongoose": "^9.0.0-rc1",
    "typescript": "^5.9.3"
  }
}
